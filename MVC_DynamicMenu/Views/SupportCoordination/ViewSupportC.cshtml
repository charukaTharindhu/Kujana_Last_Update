@model MVC_DynamicMenu.Models.AddNewSupportCoordination
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link href="~/css/Addfile.css" rel="stylesheet" />
</head>
<div class="container">
    <header class="header">
        <h1 id="title" class="text-center">Add A New Support Co-ordination Case Note </h1>
        <p id="description" class="description text-center">

        </p>
    </header>
    <form asp-action="" id="survey-form">
        <div class="form-group">
            <label id="name-label" asp-for="Client_name">Participant</label>
            <input type="text"
                   asp-for="Client_name"
                   id="name"
                   class="form-control"
                   placeholder="Enter your name"
                 
                   required />

          
        </div>
        @*Date Start*@
        <label asp-for="EntryDate">Entry Date</label>
        <input type="date" asp-for="EntryDate" id="dateofbirth">

        @*Hierarchy Start*@
        <div class="form-group">
            <p>Hierarchy</p>
            <select id="dropdown" asp-for="Heirarchy" class="form-control" required>
                @*<option disabled selected value>Select current role</option>*@
                <option value="student">New</option>
                <option value="job">Full Time Job</option>
                <option value="learner">Full Time Learner</option>
                <option value="preferNo">Prefer not to say</option>
                <option value="other">Other</option>
            </select>
        </div>
        <button type="button" class="accordion">Date</button>
        <div class="panel">
            @*Date*@
            <label asp-for="Date">Date</label>
            <input type="date" asp-for="Date" id="dateofbirth">

            <div class="form-group">
                <label id="name-label" asp-for="Time">Time</label>
                <input type="text"
                       asp-for="Time"
                       id="name"
                       class="form-control"
                       required />
            </div>
        </div>
        @*Support Details*@
        <button type="button" class="accordion">Support Details</button>
        <div class="panel">
            <p>Support Details</p>

            <div class="form-group">
                <p>Type of Support Co-ordination activity</p>
                <select id="dropdown" asp-for="Type_of_support_coordination_activity" class="form-control" required>
                    @*<option disabled selected value>Select current role</option>*@
                    <option value="student">New</option>
                    <option value="job">Full Time Job</option>
                    <option value="learner">Full Time Learner</option>
                    <option value="preferNo">Prefer not to say</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <h6>Contact Type</h6>
            <label>
                <input asp-for="ContactType"
                       value="Phone Call"
                       type="radio"
                       class="input-radio"
                       checked />Phone Call
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Email"
                       type="radio"
                       class="input-radio" />Email
            </label>

            <label>
                <input asp-for="ContactType"
                       value="Face to Face"
                       type="radio"
                       class="input-radio" />Face to Face
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Referrai Action"
                       type="radio"
                       class="input-radio" />Referrai Action
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Report prep"
                       type="radio"
                       class="input-radio" />Report prep
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Research"
                       type="radio"
                       class="input-radio" />Research
            </label>
            <label>
                <input asp-for="ContactType"
                       value="Stakeholder Meeting"
                       type="radio"
                       class="input-radio" />Stakeholder Meeting
            </label>
            <h6>Service (Claim) Type</h6>
            <label>
                <input asp-for="ServiceType"
                       value="Direct Support"
                       type="radio"
                       class="input-radio"
                       checked />Direct Support
            </label>
            <label>
                <input asp-for="ServiceType"
                       value="Report Writing"
                       type="radio"
                       class="input-radio" />Report Writing
            </label>

            <label>
                <input asp-for="ServiceType"
                       value="Non-Face to Face"
                       type="radio"
                       class="input-radio" />Non-Face to Face
            </label>
        </div>
        @*Details*@
        <button type="button" class="accordion">Details</button>
        <div class="panel">
            <div class="form-group">

                <p>Details</p>
                <h6>Purpose</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="Purpose"></textarea>
                <h6>Outcome(s)</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="Outcome"></textarea>
                <h6>Follow Up</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="FollowUp"></textarea>
                <h6>Duration</h6>
                <textarea id="comments"
                          class="input-textarea"
                          asp-for="Duration"></textarea>
            </div>
        </div>
        @*Completion & Sign-off*@


        <div class="form-group">
            <p>Completion & Sign-off</p>
            <label id="name-label" asp-for="StaffName">Staff Member Name</label>
            <input type="text"
                   asp-for="StaffName"
                   id="name"
                   class="form-control"
                   required />
        </div>


        <div class="form-group">

            <h6>Signature</h6>
            <textarea id="comments"
                      class="input-textarea"
                      asp-for="StaffSignature"></textarea>
        </div>
        <div class="form-group">
            <p>Completion & Sign-off</p>
            <label id="name-label" for="name">Name</label>
            <input type="text"
                   asp-for="Name"
                   id="name"
                   class="form-control"
                   required />
        </div>

       
        <script type="text/javascript">
            const projectName = 'survey-form';

        </script>
    </form>
</div>






